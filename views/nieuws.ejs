<% include header %>


<p class="home"><a href="/"> < home</a></p>


<section>
<p class="uitvoerder"><%- item.uitvoerder %></p>
    <h2>
      <%- item.titel %>
    </h2>
    <img src="/img/<%- item.afbeeldingl %>" alt="<%- item.titel %>">

    <p class="info">Datering: <span><%- item.datum %></span></p>
    <p class="info">Periode: <span><%- item.periode %></span></p>
    <p class="info">Stijl:
      <span>
      <% for (var i = 0; i < item.categorieen.length; i++) { %>
        <a href="/categorieen/<%- i %>"><%- item.categorieen[i] %></a><% if (i+1< item.categorieen.length){ %>, <% } %>
      <% } %>
      </span>
    </p>

    <p>
      <%- item.body %>
    </p>



</section>

<% include footer %>
